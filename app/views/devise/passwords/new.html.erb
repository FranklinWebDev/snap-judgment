<main class="container public">
  <div class="container">
    <div class="row">
      <center>
        <div class="col-md-4" >
          <h3>ENTER YOUR EMAIL ADDRESS</h3>
          <%= form_for(resource, as: resource_name, data: { turbo: false }, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mt-3">
              <%= f.label :email, 'Email: '%>
              <%= f.email_field :email, required: true, class: 'form-control' %>
            </div>
            <%= f.submit 'Submit', class: 'btn btn-primary btn-dark mt-3 sub-forgot' %>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </center>
    </div>
  </div>
</main>
