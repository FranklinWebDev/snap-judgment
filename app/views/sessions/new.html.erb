<main class="container public">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<h1>Log in</h1>
				<%= form_with model: @session do |form| %> 
					<div class="form-group mt-3">
						<%= form.label :email, 'Email: ' %>
						<%= form.email_field :email, required: true, class: 'form-control' %>
					</div>
					<div class="form-group mt-3">
						<%= form.label :email, 'Password: ' %>
						<%= form.password_field :password, required: true, class: 'form-control' %>
						<%= link_to "Forgot Passowrd", "../forgot_password" %>
					</div>
					<%= form.submit 'Log in', class: 'btn btn-primary btn-dark mt-3' %>
				<% end %>
			</div>
		</div>
	</div>
</main>